<div class="row">
<% if @book.errors.any? %>
 <h2><%= @book.errors.count %>error prohibited this obj from being saved</h2>
 <ul>
  <% @book.errors.full_messages.each do |message| %>
   <li> <%= message %> </li>
   <% end %>
  </ul>
<% end %>
	<div class="col-md-4">
		<h1>Editing Book</h1>
		<%= form_for(@book) do |f| %>
			<div class="field">
				<%= f.label :title %> <br>
				<%= f.text_field :title, autofocus: true, autocomplete: "title" ,
					class:"form-control" %>
			</div>
			<div class="field">
				<%= f.label :opinion %><br>
				<%= f.text_area :body, autofocus: true, autocomplete: "body" ,
					class:"form-control" %>
			</div>
			<div class="field">
				<%= f.submit "Update Book" ,class:"btn btn-primary btn-block" %>
			</div>
		<% end %>
	</div>
</div>